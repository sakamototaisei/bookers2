<div class="container px-5 px-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'layouts/errors', obj: @book %>
    <%= render 'books/info', user: @user %>
    <h2 class="mt-3">New book</h2>
    <%= render 'books/form', book: @book %>
    </div>
              <!--左はここまで-->
    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
          <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <!--%= link_to user_path(book.user.id) do %>-->
                <!--%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>-->
                <!--% end %>-->
              </td>
              <td>
                <%= link_to group_path(group.id) do %>
                <%= group.name %>
                <% end %>
              </td>
              <td><%= group.introduction %></td>
              <td>
                <%= link_to edit_group_path(group), class: "btn btn-sm btn-success" do %>
                Edit
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </thead>
      </table>
    </div>
    </div>
</div>