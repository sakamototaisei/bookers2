<div class="container px-5 px-0">
  <div class="row">
    <div class="col-md-3">
              <h2>User info</h2>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

              <table class="table">
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </table>

                <div class="row">
                <!-- % if @user.id == current_user.id % -->
                <p><%= link_to edit_user_path(@user) do %></p>
                  <span class="btm brm-outtline-secondary btn-blok fas fa-user-cog "></span>
                <% end %>
                </div>

              <h2 class="mt-3">New book</h2>
              <%= form_with model: @book, local:true do |f| %>
                <label>Title</label><br />
                <%= f.text_field :title %><br />
                <label>Opinion</label><br />
                <%= f.text_area :body %>
                <div class="action">
                  <%= f.submit "Create Book", class: 'btn btn-success' %>
                </div>
              <% end %>

              <!--左はここまで-->

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag profile_image_id.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>

        </thead>
      </table>
    </div>
    </div>
  </div>
</div>