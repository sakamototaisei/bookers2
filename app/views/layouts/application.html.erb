<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" integrity="sha384-haqrlim99xjfMxRP6EWtafs0sB1WKcMdynwZleuUSwJR0mDeRYbhtY+KPMr+JL6f" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: "text-light" do %>
              <i class="fas fa-home"></i>
              Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: "text-light" do %>
              <i class="fas fa-users"></i>
              Users
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path, class: "text-light" do %>
              <i class="fas fa-book-open"></i>
              Books
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "text-light" do %>
              <i class="fas fa-sign-out-alt"></i>
              logout
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to users_path, class: "text-light" do %>
              <i class="fas fa-home"></i>
              Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path, class: "text-light" do %>
              <i class="fas fa-link"></i>
              About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "text-light" do %>
              <i class="fas fa-user-plus"></i>
              sign up
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "text-light" do %>
              <i class="fas fa-sign-in-alt"></i>
              login
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
    </header>


  <main>
    <%= yield %>
  </main>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

  </body>
</html>
